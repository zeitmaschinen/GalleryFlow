# Required Configuration
VITE_API_URL=http://localhost:8000      # Backend API URL (required)
VITE_WS_URL=ws://localhost:8000         # WebSocket URL (required)

# Optional Cache Settings
VITE_CACHE_TTL=300000                   # Cache duration in ms (default: 5 minutes)
VITE_CACHE_MAX_SIZE=1000                # Maximum number of cached items (default: 1000)

# Optional UI Settings
VITE_IMAGES_PER_PAGE=100                # Number of images per page (default: 100)
VITE_DEFAULT_THUMBNAIL_SIZE=150         # Default thumbnail size in px (default: 150)
VITE_SNACKBAR_DURATION=4000             # Notification duration in ms (default: 4000)

# Development Settings
VITE_DEBUG=false                        # Enable debug logging (default: false)